<div class="auth flex justify-center align-center">
  <div class="auth--container">
    <div class="auth--container__content flex flex-dir-col gap-16">
      <div class="auth--container__content-header">
        <h2>Log in</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "auth--container__content-form flex flex-dir-col gap-16"}) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email", class:"input" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password",  placeholder: "Enter your password", class:"input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        
        <%= f.submit "Log in", class: "btn btn-secondary"%>
      <% end %>
      <div class= "shared">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>